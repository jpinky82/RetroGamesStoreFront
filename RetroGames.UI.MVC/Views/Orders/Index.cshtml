@model IEnumerable<RetroGames.DATA.EF.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<section class="hero-wrap hero-wrap-2 navbackground" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end justify-content-center">
            <div class="col-md-9 ftco-animate mb-5 text-center">
                <p class="breadcrumbs mb-2"><span class="mr-2"><a href="/">Home <i class="fa fa-chevron-right"></i></a></span> <span>@ViewData["Title"] <i class="fa fa-chevron-right"></i></span></p>
                <h2 class="mb-0 bread oldfont">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
</section>

@if (User.IsInRole("Admin"))
{
    <p class="mt-3 ml-2">
        <a asp-action="Create" class="btn button btn-lg">Create New</a>
    </p>
}
<div class="m-3">
    <div class="p-3 bg-light">
        <table class="table">
            <thead>
                <tr>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.OrderId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShipToName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShipCity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShipState)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShipZip)
                    </th>
                    @if (User.IsInRole("Admin"))
                    {
                        <th class="text-center">
                            Modify
                        </th>
                    }
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="tname text-center">
                            <a asp-action="Details" asp-route-id="@item.OrderId" class="btn button px-5">
                                @Html.DisplayFor(modelItem => item.OrderId)
                            </a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShipToName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShipCity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShipState)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShipZip)
                        </td>
                        @if (User.IsInRole("Admin"))
                        {
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.OrderId" class="btn secondarybutton">Edit</a> |
                                <a asp-action="Delete" asp-route-id="@item.OrderId" class="btn btn-danger">Delete</a>
                            </td>
                        }
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts {
    <script>let table = new DataTable('.table');</script>
}
