@model RetroGames.DATA.EF.Models.Manufacturer

@{
    ViewData["Title"] = "Delete " + Model.ManufacturerName;
}

<h1 class="mt-5">@ViewData["Title"]</h1>

<h3>Are you sure you want to delete @Model.ManufacturerName?</h3>
<div>
    @*<h4>Manufacturer</h4>*@
    <p class="bg-warning text-danger d-inline-block p-3 my-3">
        This action <em>cannot</em> be undone.
    </p>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ManufacturerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ManufacturerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ManAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ManAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ManCity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ManCity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ManState)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ManState)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ManZip)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ManZip)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ManPhone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ManPhone)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ManufacturerId" />
        <input type="submit" value="Delete Forever" class="btn btn-danger d-inline-flex" />
        <a asp-action="Index" class="btn btn-secondary d-inline-flex">Back to List</a>
    </form>
</div>
