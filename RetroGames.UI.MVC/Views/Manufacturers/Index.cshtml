@model IEnumerable<RetroGames.DATA.EF.Models.Manufacturer>

@{
    ViewData["Title"] = "Manufacturers";
}

<h1 class="mt-5">@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ManufacturerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManState)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ManufacturerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManState)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ManufacturerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ManufacturerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ManufacturerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
