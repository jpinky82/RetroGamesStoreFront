@model RetroGames.DATA.EF.Models.Manufacturer

@{
    ViewData["Title"] = Model.ManufacturerName + " Details";
}

<section class="hero-wrap hero-wrap-2" style="background-image: url('../../wwwroot/images/retro_background-1.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end justify-content-center">
            <div class="col-md-9 ftco-animate mb-5 text-center">
                <p class="breadcrumbs mb-2"><span class="mr-2"><a href="/">Home<i class="fa fa-chevron-right"></i></a></span><span><a href="@Url.Action("Index", "Manufacturers")">Manufacturers<i class="fa fa-chevron-right"></i></a></span> <span>@ViewData["Title"]<i class="fa fa-chevron-right"></i></span></p>
                <h2 class="mb-0 bread">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
</section>

<div>
    <h4>Manufacturer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ManufacturerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ManufacturerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ManAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ManAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ManCity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ManCity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ManState)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ManState)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ManZip)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ManZip)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ManPhone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ManPhone)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ManufacturerId" class="btn btn-primary d-inline-flex">Edit</a>
    <a asp-action="Index" class="btn btn-secondary d-inline-flex">Back to List</a>
    <a asp-action="Delete" asp-route-id="@Model.ManufacturerId" class="btn btn-danger d-inline-flex">Delete</a>
</div>
