@model RetroGames.DATA.EF.Models.Genre

@{
    ViewData["Title"] = "Edit " + Model.GenreName;
}

<h1 class="mt-5">@ViewData["Title"]</h1>

@*<h4>Genre</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GenreId" />
            <div class="form-group">
                <label asp-for="GenreName" class="control-label"></label>
                <input asp-for="GenreName" class="form-control" />
                <span asp-validation-for="GenreName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenreDescription" class="control-label"></label>
                @*<input asp-for="GenreDescription" class="form-control" />*@
                <textarea asp-for="GenreDescription" class="form-control"></textarea>
                <span asp-validation-for="GenreDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary d-inline-flex" />
                <a asp-action="Index" class="btn btn-secondary d-inline-flex">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
